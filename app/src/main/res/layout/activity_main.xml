<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="200dp"
        android:layout_height="21dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Версия приложения: 1.5"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnActTwo"
        android:layout_width="152dp"
        android:layout_height="58dp"
        android:layout_marginBottom="260dp"
        android:backgroundTint="@color/textColor"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Перейти к расчету"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="230dp"
        android:layout_height="85dp"
        app:layout_constraintBottom_toTopOf="@+id/btnActTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.647"
        app:srcCompat="@drawable/img_calc" />

    <Button
        android:id="@+id/showResultButton"
        android:layout_width="152dp"
        android:layout_height="58dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="@color/textColor"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Показать результаты"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnActTwo" />

    <Button
        android:id="@+id/set_prices_button"
        android:layout_width="152dp"
        android:layout_height="58dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/textColor"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Установить цены"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnActTwo" />

    <Button
        android:id="@+id/btnDeveloperInfo"
        android:layout_width="160dp"
        android:layout_height="58dp"
        android:backgroundTint="@color/textColor"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="О разработчике"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.28" />

</androidx.constraintlayout.widget.ConstraintLayout>